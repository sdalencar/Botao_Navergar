<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/imagens"
        android:layout_height="@dimen/imagens"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="242dp"
        app:layout_constraintBottom_toTopOf="@+id/button_cargo_listar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon2" />

    <TextView
        android:id="@+id/textView_tres_atualiza"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        android:textColor="@color/branco"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tres_primeiro_atualiza_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:textColor="@color/branco"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/tres_segundo_atualiza_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:spinnerMode="dialog"
        android:background="@color/branco"
        app:layout_constraintStart_toStartOf="@+id/tres_primeiro_atualiza_tv"
        app:layout_constraintTop_toBottomOf="@+id/tres_primeiro_atualiza_tv" />


    <EditText
        android:id="@+id/tres_terceiro_atualiza_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/valor"
        android:inputType="numberDecimal"
        android:textSize="@dimen/texto20"
        android:textColor="@color/branco"
        android:textColorHint="@color/branco"
        app:layout_constraintStart_toStartOf="@+id/tres_segundo_atualiza_sp"
        app:layout_constraintTop_toBottomOf="@+id/tres_segundo_atualiza_sp" />

    <EditText
        android:id="@+id/tres_quarto_atualiza_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/valor"
        android:inputType="number"
        android:textSize="@dimen/texto20"
        android:textColor="@color/branco"
        android:textColorHint="@color/branco"
        app:layout_constraintStart_toStartOf="@+id/tres_terceiro_atualiza_et"
        app:layout_constraintTop_toBottomOf="@+id/tres_terceiro_atualiza_et" />




    <include
        layout="@layout/rodape_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>