<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/imagens"
        android:layout_height="@dimen/imagens"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="242dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon2" />

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/tres_um_atualiza_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        android:textColor="@color/branco"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/tres_um_atualiza_primeiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:textColor="@color/branco"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/tres_um_atualiza_segundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:textColor="@color/branco"
        app:layout_constraintStart_toStartOf="@+id/tres_um_atualiza_primeiro"
        app:layout_constraintTop_toBottomOf="@+id/tres_um_atualiza_primeiro" />


    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/tres_um_atualiza_terceiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="42dp"
        android:background="@color/branco"
        android:gravity="center"
        android:spinnerMode="dialog"
        android:textColorHint="@color/branco"
        app:layout_constraintStart_toStartOf="@+id/tres_um_atualiza_segundo"
        app:layout_constraintTop_toBottomOf="@+id/tres_um_atualiza_segundo" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tres_um_atualiza_quarto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/valor"
        android:inputType="textCapCharacters"
        android:textColor="@color/branco"
        android:textColorHint="@color/branco"
        android:textSize="@dimen/texto20"
        app:layout_constraintStart_toStartOf="@+id/tres_um_atualiza_terceiro"
        app:layout_constraintTop_toBottomOf="@+id/tres_um_atualiza_terceiro" />

    <include
        layout="@layout/rodape_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>