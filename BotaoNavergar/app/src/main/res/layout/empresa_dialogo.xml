<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fundo_degrade"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/imagens"
        android:layout_height="@dimen/imagens"
        android:layout_marginTop="64dp"
        android:src="@drawable/icon2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/empresa"
        android:textAppearance="@android:style/TextAppearance.Large"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:textColor="@color/branco" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textview1"
        android:text="@string/nome"
        android:textColor="@color/branco" />

    <EditText
        android:id="@+id/dia_empresa_nome"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/textview2"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:gravity="center"
        android:inputType="text" />


    <TextView
        android:id="@+id/textview3"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/dia_empresa_nome"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/endere_o"
        android:textColor="@color/branco" />

    <EditText
        android:id="@+id/dia_empresa_endereco"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/textview3"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:gravity="center"
        android:inputType="text" />

    <TextView
        android:id="@+id/textview4"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/dia_empresa_endereco"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/telefone"
        android:textColor="@color/branco" />

    <EditText
        android:id="@+id/dia_empresa_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textview4"
        android:background="@drawable/bg_btn"
        android:gravity="center"
        android:inputType="text" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dia_empresa_telefone">

        <Button
            android:id="@+id/dia_empresa_btvoltar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/voltar" />

        <Button
            android:id="@+id/dia_empresa_btdeletar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/apagar" />

        <Button
            android:id="@+id/dia_empresa_btatualizar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/atualizar" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>